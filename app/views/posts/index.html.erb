<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<div class="table2">
<table>
  <thead>
    <tr>
      <th>Sport name</th>
      <th>Player name</th>
      <th>Jersy no</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.sport_name %></td>
        <td><%= post.player_name %></td>
        <td><%= post.topic.name %></td>
        <td><%= link_to 'Show topic', [@topic] %></td>
        <td><%= link_to 'Edit post', edit_topic_post_path(@topic, post) %></td>
        <td><%= button_to 'Delete',[@topic, post], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Post', new_topic_post_path(@topic) %>
